<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg3">
    <RelativeLayout
        android:id="@+id/hang1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1000"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/color_diem"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/sao" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bien">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="LÀM QUEN VỚI CÁC PHÉP TOÁN
CỘNG, TRỪ, SO SÁNH TRONG PHẠM VI 10"
                android:textAlignment="center"
                android:textColor="@color/color_diem"
                android:textSize="19sp" />


        </RelativeLayout>

        <Button
            android:id="@+id/nut_thoat"
            android:layout_width="59dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custombackbutton" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

    </ListView>


</LinearLayout>